{
    "env": {
      "browser": true,
      "es6": true
    },
    "extends": ["airbnb", "plugin:prettier/recommended"],
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "plugins": ["react"],
    "rules": {
      "indent": ["error", 2],
      "linebreak-style": ["error", "unix"],
      "react/jsx-props-no-spreading": "off",
      "react/jsx-filename-extension": [0],
      "import/extensions": "off" 
    },
    "settings": {
      "import/resolver": {
        "node": {
          "extensions": [".js", ".jsx", ".ts", ".tsx"]
        }
      }
    }
  }